<Window x:Class="HRApp.View.Master.CityList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="List of City" Height="600" Width="800">
    <DockPanel LastChildFill="True">
        <ToolBarTray DockPanel.Dock="Top" Height="30"></ToolBarTray>
        <DockPanel LastChildFill="True">
            <Grid Height="500" DockPanel.Dock="Top">
                <ListView></ListView>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <Button Content="New" Width="50" x:Name="btnNew" Click="btnNew_Click" />
                <Button Content="Edit"  Width="50"/>
                <Button Content="Delete" Width="50"/>
            </StackPanel>
        </DockPanel>
    </DockPanel>
</Window>
